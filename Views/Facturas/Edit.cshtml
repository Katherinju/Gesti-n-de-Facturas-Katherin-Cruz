@model GestionFacturas.Models.Factura

@{
    ViewData["Title"] = "Editar Factura";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Editar Factura</h1>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="NumeroFactura" class="control-label">Número de Factura</label>
            <input type="text" name="NumeroFactura" value="@Model.NumeroFactura" class="form-control" />

            <span asp-validation-for="NumeroFactura" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FechaVencimiento" class="control-label">Fecha de Vencimiento</label>
            <input asp-for="FechaVencimiento" class="form-control" type="date" />
            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}