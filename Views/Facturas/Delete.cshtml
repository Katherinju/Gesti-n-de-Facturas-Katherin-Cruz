@model GestionFacturas.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Eliminar Factura</h1>

    <h3>¿Estás seguro de que deseas eliminar esta factura?</h3>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Factura #@Model.NumeroFactura</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Número de Factura</dt>
                <dd class="col-sm-9">@Model.NumeroFactura</dd>

                <dt class="col-sm-3">Fecha de Vencimiento</dt>
                <dd class="col-sm-9">@Model.FechaVencimiento.ToShortDateString()</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Estado == "Vencida")
                    {
                        <span class="badge bg-danger">@Model.Estado</span>
                    }
                    else if (Model.Estado == "Próxima a vencer")
                    {
                        <span class="badge bg-warning text-dark">@Model.Estado</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@Model.Estado</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>